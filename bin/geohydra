#!/bin/bash

usage() {
  echo "Usage:"
  echo "          geohydra command [flags]"
  echo "          geohydra help"
  echo "Commands:"
  ls bin/*.rb | sed -e 's/^bin./          /' -e 's/.rb$//'
  exit -1
}

[ $# -eq 0 ] && usage

fn=$1
shift

[ $fn = '--help' -o $fn = 'help' ] && usage
[ ! -x bin/$fn.rb ] && echo "ERROR: Invalid command: Missing bin/$fn.rb" && usage

bundle exec bin/$fn.rb $@
